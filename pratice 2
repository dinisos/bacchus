int main()
{
	int i = 0;
	int n = 0;
	int ad = 1;
	int ret = 0;
	scanf("%d", &n);
	for (i = 1; i <= n; i++)
	{
		ad = ad * i;
		ret = ret + ad;
	}
	printf("%d\n", ret);
	return 0;
}

